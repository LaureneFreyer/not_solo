<div class="profil-card">
  <div class="btn-back btn-text">
    <%= link_to :back do %>
      <i class="fa-solid fa-xmark"></i>
    <% end %>
  </div>
  <h1><%= @user.nickname %></h1>
  <div class = "user-xp">
  <img src="<%= @user.photo.attached? ? cl_image_path(@user.photo.key) : "https://st3.depositphotos.com/1767687/17621/v/600/depositphotos_176214104-stock-illustration-default-avatar-profile-icon.jpg" %>" alt="<%= @user.nickname %>" class="avatar">
  </div>
  <p><%= @user.points %>points</p>

<%= link_to edit_user_registration_path, class: "no-style" do %>
  <i class="fa-solid fa-pencil"></i>
<% end %>
    <div class= "profil-content">
      <div class="first-row">
<p>
  <i class="fa-solid fa-cake-candles" style="margin-right: 15px;"></i>
  <% age_in_words = time_ago_in_words(@user.birthday, include_seconds: false) %>
  <%= age_in_words.gsub("plus de ", "") %>
</p>
        <p><i class="fa-solid fa-user"style="margin-right: 15px;"></i><%= @user.genre %></p>
      </div>
      <div class="second-row">
        <span><p><i class="fa-solid fa-location-pin"style="margin-right: 15px;"></i><%= @user.address %></p></span>
      </div>
    <div class="third-row">
      <span>
        <p><i class="fa-regular fa-face-smile-beam" style="margin-right: 15px;"></i>
          <% @user.interests.each do |interest| %>
            <%= interest.name %>
            <% if interest != @user.interests.last %>, <% end %>
          <% end %>
        </p>
      </span>
    </div>
      <div class="profil-description">
      <p><%= @user.description %></p>
      </div>
    </div>
