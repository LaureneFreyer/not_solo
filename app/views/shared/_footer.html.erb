<div class="container-footer">
  <ul class="footer-links justify-content-evenly">
    <li>
      <%= link_to root_path, action: 'home', class: "footer-link" do %>
        <% if request.path_info == root_path %>
          <i class="fa-solid fa-house icon-footer logo-actif"></i>
        <% else %>
          <i class="fa-solid fa-house icon-footer logo-inactif"></i>
        <% end %>
      <% end %>
    </li>
    <li>
      <%= link_to cherche_path, action: 'index', class: "footer-link" do %>
        <% if request.path_info == cherche_path %>
        <i class="fa-solid fa-magnifying-glass icon-footer logo-actif"></i>
        <% else %>
        <i class="fa-solid fa-magnifying-glass icon-footer logo-inactif"></i>
        <% end %>
      <% end %>
    </li>
    <li>
      <%= link_to new_activity_path, action: 'new', class: "footer-link" do %>
      <% if request.path_info == new_activity_path %>
          <i class="fa-solid fa-plus icon-footer add-new"></i>
        <% else %>
          <i class="fa-solid fa-plus icon-footer icon-footer-size-plus"></i>
        <% end %>
      <% end %>
    </li>
    <li>
      <%= link_to message_reservation_path, class: "footer-link" do %>
        <% if request.path_info == message_reservation_path %>
                  <i class="fa-regular fa-comment icon-footer logo-actif"></i>
        <% else %>
                  <i class="fa-regular fa-comment icon-footer logo-inactif"></i>
        <% end %>
      <% end %>
    </li>
    <li>
      <%= link_to profile_path, action: 'show', class: 'footer-link' do %>
              <% if request.path_info == profile_path %>
        <img src="<%= current_user.photo.attached? ? cl_image_path(current_user.photo.key) : "https://st3.depositphotos.com/1767687/17621/v/600/depositphotos_176214104-stock-illustration-default-avatar-profile-icon.jpg" %>" alt="<%= current_user.nickname %>" class="avatar-footer-choose">
        <% else %>
                <img src="<%= current_user.photo.attached? ? cl_image_path(current_user.photo.key) : "https://st3.depositphotos.com/1767687/17621/v/600/depositphotos_176214104-stock-illustration-default-avatar-profile-icon.jpg" %>" alt="<%= current_user.nickname %>" class="avatar-footer">
      <% end %>
      <% end %>
    </li>
  </ul>
</div>
