<div class="container-reservations">
    <div class="btn-back btn-text">
      <%= link_to :back do %>
        <i class="fa-solid fa-xmark"></i>
      <% end %>
    </div>
    <h1 class="headers">Mes messages</h1>

<div class="messages-btn">
  <button class='btn-categorie-menu'>
    <%= link_to 'Mes demandes', reservations_requests_path, class: 'btn-text' %>
  </button>
</div>

<div class="chatrooms-container">
<% @activities.each do |activity| %>
  <% unless activity.chatroom.nil? %>
    <div class="chatroom-card-link <%= 'unread' unless activity.chatroom.messages.all?(&:read) %>" data-action="click->new-messages#toggle" data-new-messages-target="toggleRead" data-chatroom-id="<%= activity.chatroom.id %>">
      <i class="fa-regular fa-comments icon-messages"></i>
      <%= link_to activity.title, activity_chatroom_path(activity, activity.chatroom), class:"btn-text-messages" %>
    </div>
  <% end %>
<% end %>

  </div>
</div>
