<h1><%= @activity.title %></h1>

<p>Organisé par: <%= @activity.user.nickname %></p>

<p>Catégorie: <%= @activity.category %></p>

<p>Description: <%= @activity.content %></p>

<p>Adresse: <%= @activity.address %></p>

<p>Date de début: <%= @activity.start_date %></p>

<p>Date de fin: <%= @activity.end_date %></p>

<p>Prix par personne: <%= @activity.price_person %></p>

<% unless current_user.likes.exists?(activity: @activity) %>
  <%= button_to 'Ajouter aux favoris', like_activity_path(@activity), method: :post, class: 'btn btn-primary' %>
<% end %>

<% unless current_user == @activity.user %>
  <%= button_to 'Réserver', activity_reservations_path(@activity), method: :post, class: 'btn btn-primary' %>
<% end %>





<%= link_to 'Retour', cherche_path %>

<% content_for :meta_title, @activity.title %>
<% content_for :meta_description, @activity.description %>
<% if @activity.photo.present? %>
  <% content_for :meta_image, cl_image_path(@activity.photo.path) %>
<% else %>
  <% content_for :meta_image, 'URL image par défaut' %>
<% end %>
