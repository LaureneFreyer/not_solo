
<div class="activities-container">
  <div class="wrap-search">
      <%= form_with url: activities_path, method: 'get', class: "d-flex" do |form| %>
        <%= form.text_field :query, class: "input-search", placeholder: "ActivitÃ©e" %>
        <%= button_tag( :class => "search-button") do %>
        <i class="fa-solid fa-magnifying-glass search-icon" style="color: #6A9696;"></i>
        <% end %>
        <%# <%= form.text_field :city, class: "input-search", placeholder: "Choisir une ville" %>
      <% end %>
  </div>
  <div class="map-container">
    <div style="width: 100%; height: 100%; border-radius: 10px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      data-map-user-coordinates-value="<%= @user_coordinates.to_json %>">
    </div>
  </div>
    <div class="cards-container">
      <% @activities.each do |activity| %>
        <div class="resum-annonce-card">
          <%= link_to activity_path(activity) do %>
            <p><%= activity.title %></p>
          <% end %>
            <p><i class="fa-solid fa-calendar-days"></i><%= activity.start_date %></p>
          </div>
          <% end %>
    </div>
</div>
