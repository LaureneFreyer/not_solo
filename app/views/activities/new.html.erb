<%= form_with model: @activity, url: activities_path, class: "needs-validation", novalidate: true, id: "new-activity-form" do |f| %>
  <% if @activity.errors.any? %>
    <div class="alert alert-danger">
      <% @activity.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ["Match de sport", "Activité physique", "Concert", "Sortie en ville", "Randonnée", "Activité culinaire", "Voyage", "Visite", "Jeux", "Sortie culturelle", "Activité artistique", "Vie quotidienne", "Cinéma", "Restaurant"], class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", rows: 5, required: true, minlength: 20 %>
    <% if @activity.errors[:content].any? %>
      <p class="text-danger">La description doit contenir au moins 20 caractères.</p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :price_person %>
    <%= f.number_field :price_person, step: 0.01, class: "form-control", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
